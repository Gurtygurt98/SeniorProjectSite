@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />

        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Gurtygurt98/SeniorProjectSite" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudTooltip Text="Close" Arrow="true" Placement="Placement.Right">
                <MudText Typo="Typo.h6" @onclick="@DrawerToggle" style="cursor: pointer;">FIT Carpool App</MudText>
            </MudTooltip>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent MaxWidth="MaxWidth.Small">
        <MudPaper Class="side-paper">
            <MudContainer Fixed="true" Class="gutter">
                <MudPaper Height="100%" Width="100%" Class="center-paper">
                    <MudContainer MaxWidth="MaxWidth.Small">
                        @Body
                    </MudContainer>
                </MudPaper>
            </MudContainer>
        </MudPaper>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

<style>
    .center-paper {
        background-color: white;
    }

    .side-paper {
        background-color: whitesmoke;
    }
    .gutter {
        padding-left: 5%;
        padding-right: 5%;
    }
</style>
