@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />

        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Gurtygurt98/SeniorProjectSite" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">FIT Carpool App</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent MaxWidth="MaxWidth.Small">
        <MudPaper Class="my-external-paper ">
            <MudContainer Fixed="true" Class="my-gutter">
                <MudPaper Height="100%" Width="100%" Class="my-colored-paper">
                    <MudContainer MaxWidth="MaxWidth.Small">
                        @Body
                    </MudContainer>
                </MudPaper>
            </MudContainer>
        </MudPaper>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

<style>
    /* Custom CSS for colored paper */
    .my-colored-paper {
        background-color: white;
    }

    .my-external-paper {
        background-color: whitesmoke;
    }
    /* Custom CSS for gutter */
    .my-gutter {
        padding-left: 5%;
        padding-right: 5%;
    }
</style>
