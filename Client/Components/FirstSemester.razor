<MudCard Elevation="1">
    <MudCardHeader>
        <MudText Typo="Typo.h5" @onclick="@ToggleContent" style="cursor: pointer;">First Semester</MudText>
    </MudCardHeader>
    <MudCardContent>
        @if (isContentOpen)
        {
            <MudGrid>
                <MudItem xs = "12">
                    <MudStack Row="true">
                        <DocumentLink Label="Plan Jan 22" DocPaths=@Jan22Docs></DocumentLink>
                    </MudStack>
                </MudItem>

            </MudGrid>
        }
    </MudCardContent>
</MudCard>
@code {
    Boolean isContentOpen = true;
    public string[] Jan22Docs = { "Documents\\Plan.pdf", "Documents\\Presentation.pdf"};
    public void ToggleContent()     
    {
        isContentOpen = !isContentOpen;   
    }
}
