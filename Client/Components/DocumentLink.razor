<MudGrid>
    <MudItem xs="4">
        <MudText>@Label</MudText>

    </MudItem>

    @foreach(string document in DocPaths)
    {
        if (document.Contains(".pdf"))
        {
            <MudItem xs="4">
                <MudLink Href="@document" Target="_blank">@StripPath(document)</MudLink>
            </MudItem>
        }
        else if (document.Contains("Demo Video"))
        {
            <MudItem xs="4">
                <MudLink Href="https://www.youtube.com/watch?v=8TQSe2CKa1Q" Target="_blank">Demo Video</MudLink>
            </MudItem>
        }

    }
</MudGrid>
@code {
    [Parameter]
    public string[] DocPaths { get; set; } = { "No document"};
    [Parameter]
    public string Label { get; set; } = "Unnamed Doc";
    // Cleans
    public static string StripPath(string FullPath)
    {
        string output = FullPath.Replace("Documents\\", "");
        return output.Replace(".pdf", "");
    }
}
